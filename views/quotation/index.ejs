						<section class="col-8">
                            <div class="card p-5">
                                <div class="card-header quotation-card-header d-flex justify-content-center">
                                    <img src="/img/logo SS.png" alt="">
                                </div>
                                <div class="card-body d-flex row justify-content-center">
                                    <h1 class="mb-4">Cotação</h1>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text search-bar-prepend pl-3" id="basic-addon1">
                                                <i class="fa-solid fa-magnifying-glass"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control quotation-search-bar" id="quotationCode" name=""
                                        placeholder="Código da Cotação" required>
                                    </div>
                                </div>
                                <div class="row col-12 d-flex justify-content-center">
                                    <div class="d-flex justify-content-end col-4">
                                        <button class="btn btn-quotation btn-block bg-gradient btn-lg col-12"
                                            tabindex="7" id="searchQuotationButton" type="button">Pesquisar</button>
                                    </div>
                                    <div class="d-flex justify-content-end col-4">
                                        <button
                                            class="btn btn-primary btn-block bg-gradient btn-lg col-12 font-weight-bold"
                                            tabindex="8" id="newQuotationButton" type="button">Nova</button>
                                    </div>
                                </div>
                            </div>
						</section>
					</div>
			</div>
	</body>
	<%- include('../partials/footer.ejs') %>
    <script>
        document.getElementById("newQuotationButton").onclick = function () {
            location.href = "/quotation/new";
        };

        document.getElementById("searchQuotationButton").onclick = function () {
            location.href = "/quotation/" + $("#quotationCode").val();
        };

        
    </script>